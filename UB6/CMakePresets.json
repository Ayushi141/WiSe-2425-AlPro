{
    "version": 8,
    "configurePresets": [
        {
            "name": "Test",
            "displayName": "Benutzerdefinierte Konfigurationsvoreinstellung",
            "description": "Legt Ninja Generator fest, erstellt und installiert das Verzeichnis.",
